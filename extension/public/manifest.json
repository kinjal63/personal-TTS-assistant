{
  "manifest_version": 3,
  "name": "TTS Assistant",
  "version": "0.1.0",
  "description": "Convert web articles to natural speech with AI-powered Text-to-Speech",
  "permissions": [
    "activeTab",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.tts-assistant.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TTS Assistant"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": []
    }
  ]
}
